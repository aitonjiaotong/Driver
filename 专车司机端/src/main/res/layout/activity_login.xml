<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aiton.bamin.driver.activity.LoginActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout26"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_hight"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/white">

        <TextView
            android:id="@+id/textView126"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="登录"
            android:textSize="@dimen/title_textsize"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relativeLayout26"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/relativeLayout27"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/imageView25"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_logo"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout27"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView127"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/aiton_basic_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5">

                    <ImageView
                        android:id="@+id/imageView42"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:src="@mipmap/shoujihao2x"
                        />

                    <TextView
                        android:id="@+id/textView128"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toEndOf="@+id/imageView42"
                        android:layout_toRightOf="@+id/imageView42"
                        android:text="手机号"
                        android:textSize="@dimen/normal_textsize"
                        />
                </RelativeLayout>

                <EditText
                    android:id="@+id/editText_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入手机号"
                    android:textSize="@dimen/normal_edittextsize"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/textView129"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/aiton_basic_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5">

                    <ImageView
                        android:id="@+id/imageView43"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:src="@mipmap/suo2x"/>

                    <TextView
                        android:id="@+id/textView130"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toEndOf="@+id/imageView43"
                        android:layout_toRightOf="@+id/imageView43"
                        android:text="密码"
                        android:textSize="@dimen/normal_textsize"/>
                </RelativeLayout>

                <EditText
                    android:inputType="textPassword"
                    android:id="@+id/editText_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="密码"
                    android:textSize="@dimen/normal_edittextsize"/>
            </LinearLayout>

            <TextView
                android:id="@+id/textView131"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/aiton_basic_color"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout"
            android:id="@+id/relativeLayout28">

            <TextView
                android:layout_gravity="right"
                android:id="@+id/textView_forgetPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="忘记密码"
                android:textColor="@color/aiton_basic_color"
                android:textSize="@dimen/normal_textsize"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>

            <Button
                style="@style/btn_style"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="登录"
                android:id="@+id/button_login"
                android:layout_below="@+id/relativeLayout28"
                android:layout_centerHorizontal="true"/>

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="同意"
                    android:textSize="@dimen/normal_textsize"
                    android:id="@+id/textView133"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="《服务标准及违约责任约定》"
                    android:textColor="@color/aiton_basic_color"
                    android:textSize="@dimen/normal_textsize"
                    android:id="@+id/textView134"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/textView133"
                    android:layout_toEndOf="@+id/textView133"/>
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>
